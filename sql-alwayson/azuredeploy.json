{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "subnetId": {
      "type": "string"
    },
    "clusterIpAddress": {
      "type": "string",
      "defaultValue": "10.0.1.30"
    },
    "adminUsername": {
      "type": "string",
      "defaultValue": "EnterpriseAdmin"
    },
    "adminPassword": {
      "type": "securestring"
    },
    "domainName": {
      "type": "string",
      "defaultValue": "devnet.contoso.us"
    },
    "sqlwVmSize": {
      "type": "string",
      "allowedValues": [
        "Standard_D1_v2",
        "Standard_D2_v2",
        "Standard_D3_v2",
        "Standard_D4_v2",
        "Standard_D5_v2",
        "Standard_D11_v2",
        "Standard_D12_v2",
        "Standard_D13_v2",
        "Standard_D14_v2",
        "Standard_D15_v2",
        "Standard_DS1_v2",
        "Standard_DS2_v2",
        "Standard_DS3_v2",
        "Standard_DS4_v2",
        "Standard_DS5_v2",
        "Standard_DS11_v2",
        "Standard_DS12_v2",
        "Standard_DS13_v2",
        "Standard_DS14_v2",
        "Standard_DS15_v2"
      ],
      "defaultValue": "Standard_DS1_v2"
    },
    "sqlVmSize": {
      "type": "string",
      "allowedValues": [
        "Standard_D1_v2",
        "Standard_D2_v2",
        "Standard_D3_v2",
        "Standard_D4_v2",
        "Standard_D5_v2",
        "Standard_D11_v2",
        "Standard_D12_v2",
        "Standard_D13_v2",
        "Standard_D14_v2",
        "Standard_D15_v2",
        "Standard_DS1_v2",
        "Standard_DS2_v2",
        "Standard_DS3_v2",
        "Standard_DS4_v2",
        "Standard_DS5_v2",
        "Standard_DS11_v2",
        "Standard_DS12_v2",
        "Standard_DS13_v2",
        "Standard_DS14_v2",
        "Standard_DS15_v2"
      ],
      "defaultValue": "Standard_DS2_v2"
    },
    "sqlVmImagePublisher": {
      "type": "string",
      "defaultValue": "MicrosoftSqlServer"
    },
    "sqlVmImageOffer": {
      "type": "string",
      "defaultValue": "SQL2017-WS2016"
    },
    "sqlVmImageSku": {
      "type": "string",
      "defaultValue": "Enterprise"
    }
  },
  "variables": {
    "diagStorageAccountName": "[concat(uniquestring(resourceGroup().id), 'sqlvmdiag')]",
    "HASetName": "SqlHASet",
    "sqlwName": "SqlWitness",
    "sqlwFileShare": "SQLFILEWITNESS",
    "SqlVmPrefix": "SQL",
    "baseUri": "https://raw.githubusercontent.com/hansenms/iac/core-primitives/sql-alwayson/azuredeploy.json",
    "SQLPrepareModuleURL": "[uri(variables('baseUri'), 'DSC/PrepareSQLServer.ps1.zip')]",
    "SQLPrepareFunction": "PrepareSQLServer.ps1\\SQLServerPrepareDsc",
    "WitnessPrepareModuleURL": "[uri(variables('baseUri'), 'DSC/PrepareSQLWitness.ps1.zip')]",
    "WitnessPrepareFunction": "PrepareSQLWitness.ps1\\SQLWitnessPrepareDsc",
    "windowsVmTemplateURL": "[uri(variables('baseUri'),'../primitives/windowsvm.json')]",
    "LBName": "SQLLB",
    "LBBEName": "[concat(variables('LBName'),'BE')]",
    "LBFEName": "[concat(variables('LBName'),'FE')]",
    "LBProbeName": "[concat(variables('LBName'),'Probe')]",
    "sqlBEAddressPoolID": "[concat(resourceId('Microsoft.Network/loadBalancers',variables('LBName')),'/backendAddressPools/',variables('LBBEName'))]",
    "sqllbFEConfigID": "[concat(resourceId('Microsoft.Network/loadBalancers',variables('LBName')),'/frontendIPConfigurations/',variables('LBFEName'))]",
    "sqllbProbeID": "[concat(resourceId('Microsoft.Network/loadBalancers',variables('LBName')),'/probes/',variables('LBProbeName'))]"
  },
  "resources": [
    {
      "type": "Microsoft.Storage/storageAccounts",
      "name": "[variables('diagStorageAccountName')]",
      "apiVersion": "2016-01-01",
      "location": "[resourceGroup().location]",
      "sku": {
        "name": "Standard_LRS"
      },
      "kind": "Storage",
      "properties": {}
    },
    {
      "name": "[variables('HASetName')]",
      "type": "Microsoft.Compute/availabilitySets",
      "location": "[resourceGroup().location]",
      "apiVersion": "2017-03-30",
      "dependsOn": [],
      "properties": {
        "platformUpdateDomainCount": 2,
        "platformFaultDomainCount": 2
      },
      "sku": {
        "name": "Aligned"
      }
    },
    {
      "name": "SqlWDeploy",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2017-05-10",
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts', variables('diagStorageAccountName'))]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('windowsVmTemplateURL')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "vmName": {
            "value": "[variables('sqlwName')]"
          },
          "vmSize": {
            "value": "[parameters('sqlwVmSize')]"
          },
          "subnetId": {
            "value": "[parameters('subnetId')]"
          },
          "adminUsername": {
            "value": "[parameters('adminUsername')]"
          },
          "adminPassword": {
            "value": "[parameters('adminPassword')]"
          },
          "diagStorageAccountId": {
            "value": "[resourceId('Microsoft.Storage/storageAccounts', variables('diagStorageAccountName'))]"
          },
          "availabilitySetId": {
            "value": "[resourceId('Microsoft.Compute/availabilitySets', variables('HASetName'))]"
          }
        }
      }
    },
    {
      "name": "[variables('LBName')]",
      "type": "Microsoft.Network/loadBalancers",
      "apiVersion": "2017-10-01",
      "location": "[resourceGroup().location]",
      "properties": {
        "frontendIPConfigurations": [
          {
            "name": "[variables('LBFEName')]",
            "properties": {
              "privateIPAddress": "[parameters('clusterIpAddress')]",
              "privateIPAllocationMethod": "Static",
              "subnet": {
                "id": "[parameters('subnetId')]"
              }
            }
          }
        ],
        "backendAddressPools": [
          {
            "name": "[variables('LBBEName')]"
          }
        ],
        "loadBalancingRules": [
          {
            "name": "SQLLBRule",
            "properties": {
              "frontendIPConfiguration": {
                "id": "[variables('sqllbFEConfigID')]"
              },
              "backendAddressPool": {
                "id": "[variables('sqlBEAddressPoolID')]"
              },
              "probe": {
                "id": "[variables('sqllbProbeID')]"
              },
              "frontendPort": 1433,
              "backendPort": 1433,
              "enableFloatingIP": true,
              "idleTimeoutInMinutes": 4,
              "protocol": "Tcp",
              "loadDistribution": "Default"
            }
          }
        ],
        "probes": [
          {
            "name": "[variables('LBProbeName')]",
            "properties": {
              "protocol": "Tcp",
              "port": 59999,
              "intervalInSeconds": 5,
              "numberOfProbes": 2
            }
          }
        ]
      }
    },
    {
      "name": "[concat('SqlVmDeploy', copyindex())]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2017-05-10",
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts', variables('diagStorageAccountName'))]",
        "[resourceId('Microsoft.Network/loadBalancers', variables('LBName'))]"
      ],
      "copy": {
        "name": "sqlvmloop",
        "count": 2
      },
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('windowsVmTemplateURL')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "vmName": {
            "value": "[concat(variables('SqlVmPrefix'), copyindex())]"
          },
          "vmSize": {
            "value": "[parameters('sqlVmSize')]"
          },
          "subnetId": {
            "value": "[parameters('subnetId')]"
          },
          "adminUsername": {
            "value": "[parameters('adminUsername')]"
          },
          "adminPassword": {
            "value": "[parameters('adminPassword')]"
          },
          "diagStorageAccountId": {
            "value": "[resourceId('Microsoft.Storage/storageAccounts', variables('diagStorageAccountName'))]"
          },
          "availabilitySetId": {
            "value": "[resourceId('Microsoft.Compute/availabilitySets', variables('HASetName'))]"
          },
          "imagePublisher": {
            "value": "[parameters('sqlVmImagePublisher')]"
          },
          "imageOffer": {
            "value": "[parameters('sqlVmImageOffer')]"
          },
          "imageSku": {
            "value": "[parameters('sqlVmImageSku')]"
          },
          "LoadBalancerBEId": {
            "value": "[variables('sqlBEAddressPoolID')]"
          }
        }
      }
    },
    {
      "apiVersion": "2015-06-15",
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(variables('sqlwName'), '/joindomain')]",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/deployments', 'SqlWDeploy')]"
      ],
      "properties": {
        "publisher": "Microsoft.Compute",
        "type": "JsonADDomainExtension",
        "typeHandlerVersion": "1.3",
        "autoUpgradeMinorVersion": true,
        "settings": {
          "Name": "[parameters('domainName')]",
          "OUPath": "",
          "User": "[concat(parameters('domainName'), '\\', parameters('adminUserName'))]",
          "Restart": "true",
          "Options": "3"
        },
        "protectedSettings": {
          "Password": "[parameters('adminPassword')]"
        }
      }
    },
    {
      "apiVersion": "2015-06-15",
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(variables('SqlVmPrefix'), copyindex(), '/joindomain')]",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/deployments', concat('SqlVmDeploy', copyindex()))]"
      ],
      "copy": {
        "name": "sqlvmjoinloop",
        "count": 2
      },
      "properties": {
        "publisher": "Microsoft.Compute",
        "type": "JsonADDomainExtension",
        "typeHandlerVersion": "1.3",
        "autoUpgradeMinorVersion": true,
        "settings": {
          "Name": "[parameters('domainName')]",
          "OUPath": "",
          "User": "[concat(parameters('domainName'), '\\', parameters('adminUserName'))]",
          "Restart": "true",
          "Options": "3"
        },
        "protectedSettings": {
          "Password": "[parameters('adminPassword')]"
        }
      }
    },
    {
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(variables('SqlVmPrefix'), copyindex(), '/configuresql', copyindex())]",
      "dependsOn": [
        "[concat(resourceId('Microsoft.Compute/virtualMachines', concat(variables('SqlVmPrefix'), copyindex())), '/extensions/joindomain')]"
      ],
      "apiVersion": "2016-03-30",
      "copy": {
        "name": "sqlconfigloop",
        "count": 2,
        "mode": "Serial",
        "batchSize": 1
      },
      "location": "[resourceGroup().location]",
      "properties": {
        "publisher": "Microsoft.Powershell",
        "type": "DSC",
        "typeHandlerVersion": "2.21",
        "autoUpgradeMinorVersion": true,
        "settings": {
          "modulesURL": "[variables('SQLPrepareModuleURL')]",
          "configurationFunction": "[variables('SQLPrepareFunction')]",
          "properties": {
            "domainName": "[parameters('domainName')]",
            "adminCreds": {
              "userName": "[parameters('adminUserName')]",
              "password": "privateSettingsRef:adminPassword"
            },
            "ClusterName": "SQLClusterAG",
            "ClusterOwnerNode": "[concat(variables('SqlVmPrefix'), '0')]",
            "ClusterIP": "[parameters('clusterIpAddress')]",
            "WitnessFileShareName": "[concat('\\\\',variables('sqlwName'),'\\',variables('sqlwFileShare'))]"
          }
        },
        "protectedSettings": {
          "items": {
            "adminPassword": "[parameters('adminPassword')]"
          }
        }
      }
    },
    {
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(variables('sqlwName'), '/configurewitness')]",
      "dependsOn": [
        "[concat(resourceId('Microsoft.Compute/virtualMachines', variables('sqlwName')), '/extensions/joindomain')]"
      ],
      "apiVersion": "2016-03-30",
      "location": "[resourceGroup().location]",
      "properties": {
        "publisher": "Microsoft.Powershell",
        "type": "DSC",
        "typeHandlerVersion": "2.21",
        "autoUpgradeMinorVersion": true,
        "settings": {
          "modulesURL": "[variables('WitnessPrepareModuleURL')]",
          "configurationFunction": "[variables('WitnessPrepareFunction')]",
          "properties": {
            "domainName": "[parameters('domainName')]",
            "adminCreds": {
              "userName": "[parameters('adminUserName')]",
              "password": "privateSettingsRef:adminPassword"
            },
            "FileshareName": "[variables('sqlwFileShare')]"
          }
        },
        "protectedSettings": {
          "items": {
            "adminPassword": "[parameters('adminPassword')]"
          }
        }
      }
    }
  ],
  "outputs": {}
}