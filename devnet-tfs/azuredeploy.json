{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "adminUsername": {
      "type": "string",
      "defaultValue": "EnterpriseAdmin"
    },
    "adminPassword": {
      "type": "securestring"
    },
    "domainName": {
      "type": "string",
      "defaultValue": "devnet.contoso.us"
    },
    "secrets": {
        "type": "array",
        "defaultValue": []
    },
    "sslThumbprint": {
        "type": "string",
        "defaultValue": "generate"
    },
    "jumpBoxVmSize": {
      "type": "string",
      "allowedValues": [
        "Standard_DS1_v2",
        "Standard_DS2_v2",
        "Standard_DS3_v2",
        "Standard_DS4_v2",
        "Standard_DS5_v2",
        "Standard_DS11_v2",
        "Standard_DS12_v2",
        "Standard_DS13_v2",
        "Standard_DS14_v2",
        "Standard_DS15_v2"
      ],
      "defaultValue": "Standard_DS2_v2"
    },
    "DCVmSize": {
      "type": "string",
      "allowedValues": [
        "Standard_DS1_v2",
        "Standard_DS2_v2",
        "Standard_DS3_v2",
        "Standard_DS4_v2",
        "Standard_DS5_v2",
        "Standard_DS11_v2",
        "Standard_DS12_v2",
        "Standard_DS13_v2",
        "Standard_DS14_v2",
        "Standard_DS15_v2"
      ],
      "defaultValue": "Standard_DS1_v2"
    },
    "tfsVmSize": {
      "type": "string",
      "allowedValues": [
        "Standard_DS1_v2",
        "Standard_DS2_v2",
        "Standard_DS3_v2",
        "Standard_DS4_v2",
        "Standard_DS5_v2",
        "Standard_DS11_v2",
        "Standard_DS12_v2",
        "Standard_DS13_v2",
        "Standard_DS14_v2",
        "Standard_DS15_v2"
      ],
      "defaultValue": "Standard_DS2_v2"
    },
    "tfsSqlVmSize": {
      "type": "string",
      "allowedValues": [
        "Standard_DS1_v2",
        "Standard_DS2_v2",
        "Standard_DS3_v2",
        "Standard_DS4_v2",
        "Standard_DS5_v2",
        "Standard_DS11_v2",
        "Standard_DS12_v2",
        "Standard_DS13_v2",
        "Standard_DS14_v2",
        "Standard_DS15_v2"
      ],
      "defaultValue": "Standard_DS4_v2"
    },
    "tfsAgentVmSize": {
      "type": "string",
      "allowedValues": [
        "Standard_DS1_v2",
        "Standard_DS2_v2",
        "Standard_DS3_v2",
        "Standard_DS4_v2",
        "Standard_DS5_v2",
        "Standard_DS11_v2",
        "Standard_DS12_v2",
        "Standard_DS13_v2",
        "Standard_DS14_v2",
        "Standard_DS15_v2"
      ],
      "defaultValue": "Standard_DS2_v2"
    }
  },
  "variables": {
    "baseUri": "[deployment().properties.templateLink.uri]",
    "coreNetworkTemplateUri": "[uri(variables('baseUri'), '../core-network/azuredeploy.json')]",
    "tfsTemplateUri": "[uri(variables('baseUri'), '../tfs/azuredeploy.json')]",
    "coreVnetName": "corevnet",
    "corevnetDevOpsSubnetName": "Subnet-2",
    "vnetid": "[resourceId('Microsoft.Network/virtualNetworks', variables('coreVnetName'))]",
    "devopsdubnetid": "[concat(variables('vnetid'), '/subnets/', variables('corevnetDevOpsSubnetName'))]"
  },
  "resources": [
    {
      "name": "core-network",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2016-09-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('coreNetworkTemplateUri')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "adminUsername": {
            "value": "[parameters('adminUsername')]"
          },
          "adminPassword": {
            "value": "[parameters('adminPassword')]"
          },
          "domainName": {
            "value": "[parameters('domainName')]"
          },
          "jumpBoxVmSize": {
            "value": "[parameters('jumpBoxVmSize')]"
          },
          "DCVmSize": {
            "value": "[parameters('DCVmSize')]"
          }
        }
      }
    },
    {
      "name": "tfs",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2016-09-01",
      "dependsOn": [
        "Microsoft.Resources/deployments/core-network"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('tfsTemplateUri')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "subnetId": {
            "value": "[variables('devopsdubnetid')]"
          },
          "adminUsername": {
            "value": "[parameters('adminUsername')]"
          },
          "adminPassword": {
            "value": "[parameters('adminPassword')]"
          },
          "domainName": {
            "value": "[parameters('domainName')]"
          },
          "tfsVmSize": {
            "value": "[parameters('tfsVmSize')]"
          },
          "tfsSqlVmSize": {
            "value": "[parameters('tfsSqlVmSize')]"
          },
          "tfsAgentVmSize": {
            "value": "[parameters('tfsAgentVmSize')]"
          },
          "secrets": {
              "value": "[parameters('secrets')]"
          },
          "sslThumbprint": {
              "value": "[parameters('sslThumbprint')]"
          }
        }
      }
    }
  ],
  "outputs": {}
}
